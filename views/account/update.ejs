<div class="account-update-container">
    <h1><%= title %></h1>
    <%- messages() %>
  
    <!-- Account Update Form -->
    <div class="update-form">
        <h2>Account Update</h2>
        <form action="/account/update" method="POST">
            <input type="hidden" name="account_id" value="<%= client.account_id %>">

            <label for="account_firstname">First Name:</label>
            <input type="text" id="account_firstname" name="account_firstname" value="<%= locals.account_firstname || client.account_firstname %>" required>

            <label for="account_lastname">Last Name:</label>
            <input type="text" id="account_lastname" name="account_lastname" value="<%= locals.account_lastname || client.account_lastname %>" required>

            <label for="account_email">Email:</label>
            <input type="email" id="account_email" name="account_email" value="<%= locals.account_email || client.account_email %>" required>

            <button type="submit">Update Account</button>
        </form>
    </div>

    <!-- Change Password Form -->
    <div class="change-password-form">
        <h2>Change Password</h2>
        <p>Enter a new password to change your current password. Passwords must be at least 12 characters long and include at least one uppercase letter, one lowercase letter, one number, and one special character.</p>
        <form action="/account/change-password" method="POST">
            <input type="hidden" name="account_id" value="<%= client.account_id %>">

            <label for="current_password">Current Password:</label>
            <input type="password" id="current_password" name="current_password" required>

            <label for="new_password">New Password:</label>
            <input type="password" id="new_password" name="new_password" required>

            <label for="confirm_password">Confirm New Password:</label>
            <input type="password" id="confirm_password" name="confirm_password" required>

            <button type="submit">Change Password</button>
        </form>
    </div>
</div>