<div class="inventory-container">
    <% if (title) { %>
        <h1><%= title %></h1>
    <% } else { %>
        <h1>Delete Inventory Item</h1>
    <% } %>

    <p>Confirm Deletion - The delete is permanent.</p>
    <form id="deleteForm" action="/inv/delete" method="POST">
        <input type="hidden" name="inv_id" value="<%= inv_id %>"> <!-- Hidden input for inv_id -->
        <label for="inv_make">Make:</label>
        <input type="text" id="inv_make" name="inv_make" readonly value="<%= inv_make %>">
        <label for="inv_model">Model:</label>
        <input type="text" id="inv_model" name="inv_model" readonly value="<%= inv_model %>">
        <label for="inv_year">Year:</label>
        <input type="number" id="inv_year" name="inv_year" readonly value="<%= inv_year %>">
        <label for="inv_price">Price:</label>
        <input type="number" id="inv_price" name="inv_price" readonly value="<%= inv_price %>">
        <button type="submit">Delete Inventory Item</button>
    </form>
</div>